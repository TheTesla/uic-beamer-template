\newcommand{\TikzSplitSlide}[1]{%
  \rule{0.4\paperwidth}{0pt}%
  \begin{tikzpicture}[remember picture,overlay,shift={(0.1\paperwidth,-0.5\paperheight)}]
    \clip (-0.2\paperwidth,-0.5\paperheight) -- 
          ( 0.5\paperwidth,-0.5\paperheight) -- 
          ( 0.5\paperwidth, 0.5\paperheight) -- 
          ( 0.3\paperwidth, 0.5\paperheight) -- cycle; 
    \node at (0.1\paperwidth,0) {%
      \includegraphics[height=1.1\paperheight]{#1}%
    };
  \end{tikzpicture}
}

\newbool{splittitle}
\newcommand{\@TitleBackground}{}
\newcommand{\titlebackground}{\@ifstar{\SplitBackground}{\FullBackground}}
\newcommand{\FullBackground}[1]{\renewcommand{\@TitleBackground}{#1}}
\newcommand{\SplitBackground}[1]{%
	\booltrue{splittitle}%
	\renewcommand{\@TitleBackground}{#1}%

	% a white titlebox is needed on a full background, but looks bad on
	% a split background (and is not needed when left half is already white)
	% we therefore set titlebox background to transparent for split backgrounds
	\setbeamercolor{title}{bg=}
}

\renewcommand{\maketitle}{
\begingroup
  \ifdefempty{\@TitleBackground}{}{% Skip if \@TitleBackground is empty
    \setbeamertemplate{background}{%
      \ifbool{splittitle}{%
        \TikzSplitSlide{\@TitleBackground}
      }{% Normal, full-screen background
        \includegraphics[width=\paperwidth]{\@TitleBackground}
        % \includegraphics[height=\paperheight]{\@TitleBackground}
      }
    }
  }
  \begin{frame}%
  \titlepage%
  \end{frame}%
\endgroup
}

\newenvironment{chapter}[3][]{% Args: image (optional), color, frame title
  \begingroup
  \themecolor{blue}
  \setbeamertemplate{footline}{}
  \ifstrequal{#2}{white}{ % Use blue text on white background
    \setbeamercolor{frametitle}{fg=uicblue}
    \setbeamercolor{normal text}{fg=uicblue,bg=#2}
  }{}
  \ifstrequal{#2}{expowhite}{ % Also use blue text on expowhite background
    \setbeamercolor{frametitle}{fg=black}
    \setbeamercolor{normal text}{fg=black,bg=#2}
  }{ % otherwise use white text
    \setbeamercolor{frametitle}{fg=white}
    \setbeamercolor{normal text}{fg=white,bg=#2}
  }
  \ifstrempty{#1}{}{\setbeamertemplate{background}{\TikzSplitSlide{#1}}}
  \setbeamertemplate{frametitle}{%
    \vspace*{8ex}
    \hspace*{0.0125\textwidth}% alignment with a with a circular logo is tricky
    \begin{beamercolorbox}[wd=0.45\textwidth]{frametitle}
      \usebeamerfont{frametitle}\insertframetitle\\
      \usebeamerfont{framesubtitle}\insertframesubtitle
    \end{beamercolorbox}
  }
  \begin{frame}{#3}
  \hspace*{0.05\textwidth}%
  \minipage{0.35\textwidth}%
  \usebeamercolor[fg]{normal text}%
}{%
  \endminipage
  \end{frame}
  \endgroup
  \usebeamercolor[fg]{normal text}
}

\newenvironment{sidepic}[2]{% Args: image, frame title
  \begingroup
  \setbeamertemplate{background}{%
  \hspace*{0.6\paperwidth}%
  \includegraphics[height=\paperheight]{#1}%
  }
  \setbeamertemplate{frametitle}{% Same as normal, but with right skip
    \vspace*{5mm}
    \vspace*{\titlemanualoffset}
    \begin{beamercolorbox}[leftskip=2cm,rightskip=0.4\textwidth]{frametitle}%
      \usebeamerfont{frametitle}\insertframetitle\\
      % Setting an invisible placeholder subtitle will fix the title in a constant position
      % This is due to the way the default template is defined in `beamerouterthemedefault.sty'
      \ifx\insertframesubtitle\empty
      \usebeamerfont{framesubtitle}\usebeamercolor[bg]{normal text}Placeholder
      \else
      \usebeamerfont{framesubtitle}\insertframesubtitle
      \fi
    \end{beamercolorbox}
  }
  \begin{frame}{#2}
  \minipage{0.6\textwidth}%
}{%
  \endminipage
  \end{frame}
  \endgroup
}


% Set footline AND coordinate blocks with it
\newcommand{\footlinecolor}[1]{% if #1 is empty, makes footline transparent
  \ifstrempty{#1}{%
    \renewcommand{\@footlinepayoff}{}
    \setbeamercolor{footline}{bg=}
    \setbeamercolor{block title}{fg=white,bg=black}
    \setbeamercolor{block body}{fg=white,bg=black}
  }{
    \renewcommand{\@footlinepayoff}{\usebeamertemplate{htwd cd head/foot}}
    \setbeamercolor{footline}{fg=black,bg=#1}
    \setbeamercolor{block title}{fg=black,bg=#1}
    \setbeamercolor{block body}{fg=black,bg=#1}
  }%
}

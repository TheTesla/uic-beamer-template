% Set colours
% NOTE! Beamer colors should be set in the preamble. It often works fine in the 
%       document itself, but NOT for normal text foreground.
%       \themecolor should only be called from the preamble.
\newcommand{\themecolor}[1]{
	\ifstrequal{#1}{dark}{%
		\setbeamercolor{normal text}{fg=white,bg=black}
		\setbeamercolor{structure}{fg=white}
		\renewcommand{\@UIClogo}{whitelogo}
		\setbeamercolor{block title}{fg=black,bg=steelgray}
		\setbeamercolor{block body}{fg=black,bg=steelgray}
		\usebeamercolor[fg]{normal text}
	}{}
	\ifstrequal{#1}{light}{%
		\setbeamercolor{normal text}{fg=black,bg=white}
		\setbeamercolor{structure}{fg=black}
		\renewcommand{\@UIClogo}{collogo}
		\setbeamercolor{block title}{fg=white,bg=black}
		\setbeamercolor{block body}{fg=white,bg=black}
		\usebeamercolor[fg]{normal text}
	}{}
	\ifstrequal{#1}{lightnologo}{%
		\setbeamercolor{normal text}{fg=black,bg=white}
		\setbeamercolor{structure}{fg=black}
		\renewcommand{\@UIClogo}{nologo}
		\setbeamercolor{block title}{fg=white,bg=black}
		\setbeamercolor{block body}{fg=white,bg=black}
		\usebeamercolor[fg]{normal text}
	}{}
}
